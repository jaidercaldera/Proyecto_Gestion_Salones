<div class="container col-md4 mx-auto">
    <h2>Horario {{id.name}}</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Hora</th>
                <th>Lunes</th>
                <th>Martes</th>
                <th>Miércoles</th>
                <th>Jueves</th>
                <th>Viernes</th>
                <th>Sábado</th>
            </tr>
        </thead>
        <tbody>
            <!-- Filas para cada hora -->
            {{#each horario}}
            <tr>
                <td>{{this.hora}}</td>
                <td>
                    <input type="text" name="lunes" class="form-control" value="{{this.lunes}}">
                </td>
                <td>
                    <input type="text" name="martes" class="form-control" value="{{this.martes}}">
                </td>
                <td>
                    <input type="text" name="miercoles" class="form-control" value="{{this.miercoles}}">
                </td>
                <td>
                    <input type="text" name="jueves" class="form-control" value="{{this.jueves}}">
                </td>
                <td>
                    <input type="text" name="viernes" class="form-control" value="{{this.viernes}}">
                </td>
                <td>
                    <input type="text" name="sabado" class="form-control" value="{{this.sabado}}">
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</div>